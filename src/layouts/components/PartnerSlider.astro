---
import { Image } from "astro:assets";

const partners = [
  {
    name: "venturevilla",
    src: "/images/partner/venturevilla.png",
    width: 261,
    height: 50,
  },
  {
    name: "hannoverimpuls",
    src: "/images/partner/hannoverimpuls.png",
    width: 107,
    height: 50,
  },
  {
    name: "nbank",
    src: "/images/partner/nbank.png",
    width: 205,
    height: 50,
  },
  {
    name: "siegel",
    src: "/images/partner/siegel-gruendungsstipendium.png",
    width: 83,
    height: 100,
  },
  {
    name: "nexter",
    src: "/images/partner/nexter.png",
    width: 219,
    height: 50,
  },
  {
    name: "sandrabruns",
    src: "/images/partner/sandrabruns.png",
    width: 119,
    height: 50,
  },
  {
    name: "startup-impuls",
    src: "/images/partner/startup-impuls-winter-badge-hr.png",
    width: 157,
    height: 100,
  },
];
---

<section class="section bg-[#C7DDFF] mb-16 overflow-hidden">
  <div class="marquee group" aria-label="Partner Logos">
    <div class="marquee__inner group-hover:[animation-play-state:paused]">
      <div class="marquee__group">
        {
          partners.map((partner) => (
            <Image
              src={partner.src}
              alt={partner.name}
              width={partner.width}
              height={partner.height}
              class="w-auto max-h-16 mr-12"
            />
          ))
        }
      </div>
      <div class="marquee__group">
        {
          partners.map((partner) => (
            <Image
              src={partner.src}
              alt={partner.name}
              width={partner.width}
              height={partner.height}
              class="w-auto max-h-16 mr-12"
            />
          ))
        }
      </div>
    </div>
  </div>
</section>

<style>
  .marquee {
    position: relative;
    width: 100%;
    overflow: hidden;
  }

  .marquee__inner {
    display: flex;
    width: max-content;
    animation: marquee-scroll 20s linear infinite;
    will-change: transform;
    transform: translate3d(0, 0, 0);
  }

  .marquee__group {
    display: flex;
  }

  @keyframes marquee-scroll {
    0% {
      transform: translateX(0%);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  /* Optional: smooth pause on hover */
  .group:hover .marquee__inner {
    animation-play-state: paused;
  }
</style>
